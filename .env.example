# HydroScan Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# Supabase Configuration
# ========================================
# Get these from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service role key (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# AI Integration (Google Gemini)
# ========================================
# Get your API key from https://ai.google.dev/
GEMINI_API_KEY=your_google_gemini_api_key_here

# ========================================
# MQTT Configuration (Optional)
# ========================================
# If using external MQTT broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=hydroscan-server
MQTT_KEEP_ALIVE=60

# ========================================
# Email Configuration (Optional)
# ========================================
# For email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@hydroscan.com
SMTP_FROM_NAME=HydroScan Alert System

# ========================================
# Development Settings
# ========================================
# Environment (development, staging, production)
NODE_ENV=development

# Application URL (for callbacks and links)
VITE_APP_URL=http://localhost:5173

# Debug logging (true/false)
VITE_DEBUG=true

# ========================================
# Security Settings
# ========================================
# JWT Secret for additional security (optional)
JWT_SECRET=your_jwt_secret_here

# API Rate limiting (requests per minute)
API_RATE_LIMIT=100

# Session timeout (in hours)
SESSION_TIMEOUT=24

# ========================================
# File Storage (Optional)
# ========================================
# For firmware files and exports
STORAGE_PROVIDER=supabase
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_BUCKET=hydroscan-files

# ========================================
# Monitoring & Analytics (Optional)
# ========================================
# Error tracking
SENTRY_DSN=your_sentry_dsn

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Application monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ========================================
# External Integrations (Optional)
# ========================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Twilio for SMS alerts
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Database Backup (Optional)
# ========================================
# For automated backups
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# Performance Settings
# ========================================
# Maximum number of concurrent connections
MAX_CONNECTIONS=100

# Query timeout (in seconds)
QUERY_TIMEOUT=30

# Cache TTL (in seconds)
CACHE_TTL=300

# ========================================
# Feature Flags
# ========================================
# Enable/disable features
FEATURE_FIRMWARE_UPDATES=true
FEATURE_AI_ANALYSIS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_DEVICE_SIMULATION=false

# ========================================
# Deployment Settings
# ========================================
# For production deployments
DEPLOY_ENVIRONMENT=development
BUILD_VERSION=1.0.0
COMMIT_SHA=local-dev

# CDN settings (for production)
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=/static/

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_RETENTION_DAYS=7

# ========================================
# Health Check Settings
# ========================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3
